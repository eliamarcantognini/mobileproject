    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--        Friday-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fic_secretary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/sc_secretary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foc_secretary">

        <TextView
            android:id="@+id/fridayLabelSecretary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friday"
            android:textSize="@dimen/title"
            app:layout_constraintBottom_toTopOf="@id/fridayTextViewSecretary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fridayTextViewSecretary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fridayLabelSecretary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--        Saturday -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sc_secretary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/sec_secretary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fic_secretary">

        <TextView
            android:id="@+id/saturdayLabelSecretary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
